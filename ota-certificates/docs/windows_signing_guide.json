{
  "certificate_info": {
    "description": "Windows代码签名证书配置",
    "required_secrets": [
      "WIN_CERT_PFX",
      "WIN_CERT_PASSWORD"
    ]
  },
  "instructions": {
    "1": "获取Windows代码签名证书（.pfx文件）",
    "2": "将.pfx文件转换为Base64编码",
    "3": "在GitHub Secrets中设置WIN_CERT_PFX为Base64编码的证书",
    "4": "在GitHub Secrets中设置WIN_CERT_PASSWORD为证书密码"
  },
  "powershell_commands": {
    "convert_to_base64": "[Convert]::ToBase64String([IO.File]::ReadAllBytes('path/to/your/certificate.pfx'))",
    "verify_certificate": "Get-PfxCertificate -FilePath 'path/to/your/certificate.pfx'"
  },
  "test_certificate_generation": {
    "note": "仅用于测试，生产环境需要从CA购买",
    "command": "makecert -sv test.pvk -n \"CN=Test Certificate\" test.cer",
    "convert": "pvk2pfx -pvk test.pvk -spc test.cer -pfx test.pfx"
  }
}