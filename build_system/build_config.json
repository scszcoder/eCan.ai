    "modes": {
      "dev": {
        "debug": true,
        "console": true,
        "onefile": false,
        "runtime_tmpdir": {
          "windows": "C:/ecan_cache_dev",
          "macos": "~/Library/Caches/ecan_cache_dev",
          "linux": "/tmp/ecan_cache_dev"
        }
      },
      "fast": {
        "debug": true,
        "console": true,
        "onefile": false
      },
      "prod": {
        "debug": false,
        "console": false,
        "onefile": false,
        "runtime_tmpdir": {
          "windows": "C:/ecan_cache",
          "macos": "~/Library/Caches/ecan_cache",
