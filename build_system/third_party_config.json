{
  "third_party_handlers": {
    "playwright": {
      "enabled": true,
      "description": "Playwright browser automation",
      "handler_class": "PlaywrightHandler",
      "source_paths": {
        "windows": [
          "~/.cache/ms-playwright",
          "~/AppData/Local/ms-playwright",
          "~/AppData/Local/eCan/ms-playwright"
        ],
        "macos": [
          "~/.cache/ms-playwright",
          "~/Library/Caches/ms-playwright"
        ],
        "linux": [
          "~/.cache/ms-playwright",
          "~/.local/share/ms-playwright"
        ]
      },
      "destination": "third_party/ms-playwright",
      "copy_strategy": "platform_specific",
      "symlink_handling": {
        "macos": "safe_copy",
        "windows": "resolve_symlinks",
        "linux": "preserve_symlinks"
      },
      "filters": {
        "exclude_patterns": [
          "*/cache/*",
          "*/tmp/*",
          "*/temp/*",
          "*/logs/*",
          "*/crashpad_database/*",
          "*.log",
          "*.tmp"
        ],
        "include_patterns": [
          "*/chromium-*/*",
          "browsers.json",
          "*/firefox-*/*",
          "*/webkit-*/*"
        ]
      },
      "validation": {
        "required_files": ["browsers.json"],
        "min_size_mb": 10,
        "max_size_mb": 2048
      }
    },
    "electron": {
      "enabled": false,
      "description": "Electron runtime for web-based UI",
      "handler_class": "ElectronHandler",
      "source_paths": {
        "windows": [
          "~/AppData/Local/electron",
          "~/AppData/Roaming/electron"
        ],
        "macos": [
          "~/Library/Caches/electron",
          "~/Library/Application Support/electron"
        ],
        "linux": [
          "~/.cache/electron",
          "~/.local/share/electron"
        ]
      },
      "destination": "third_party/electron",
      "copy_strategy": "selective",
      "symlink_handling": {
        "macos": "safe_copy",
        "windows": "resolve_symlinks", 
        "linux": "preserve_symlinks"
      },
      "filters": {
        "exclude_patterns": [
          "*/node_modules/*",
          "*/cache/*",
          "*.log"
        ],
        "include_patterns": [
          "*/electron*",
          "*/resources/*"
        ]
      }
    },
    "chrome_driver": {
      "enabled": false,
      "description": "ChromeDriver standalone server for Chrome automation",
      "handler_class": "ChromeDriverHandler",
      "source_paths": {
        "windows": [
          "~/Downloads/chromedriver-win64",
          "~/AppData/Local/chromedriver",
          "C:/chromedriver",
          "C:/tools/chromedriver"
        ],
        "macos": [
          "~/Downloads/chromedriver-mac64",
          "~/bin",
          "/usr/local/bin",
          "/opt/homebrew/bin"
        ],
        "linux": [
          "~/Downloads/chromedriver-linux64",
          "~/bin",
          "/usr/local/bin",
          "/usr/bin",
          "/opt/chromedriver"
        ]
      },
      "destination": "third_party/chromedriver",
      "copy_strategy": "binary_only",
      "symlink_handling": {
        "macos": "resolve_symlinks",
        "windows": "resolve_symlinks",
        "linux": "resolve_symlinks"
      },
      "filters": {
        "include_patterns": [
          "chromedriver*",
          "chromedriver.exe"
        ],
        "exclude_patterns": [
          "*.zip",
          "*.tar.gz",
          "LICENSE*",
          "README*"
        ]
      },
      "validation": {
        "required_files": ["chromedriver"],
        "executable_check": true,
        "min_size_mb": 5
      }
    },
    "ffmpeg": {
      "enabled": false,
      "description": "FFmpeg multimedia framework",
      "handler_class": "FFmpegHandler",
      "source_paths": {
        "windows": [
          "C:/ffmpeg/bin",
          "~/Downloads/ffmpeg/bin",
          "~/AppData/Local/ffmpeg/bin"
        ],
        "macos": [
          "/usr/local/bin",
          "/opt/homebrew/bin",
          "~/bin"
        ],
        "linux": [
          "/usr/bin",
          "/usr/local/bin",
          "~/bin"
        ]
      },
      "destination": "third_party/ffmpeg",
      "copy_strategy": "binary_only",
      "symlink_handling": {
        "macos": "resolve_symlinks",
        "windows": "resolve_symlinks",
        "linux": "resolve_symlinks"
      },
      "filters": {
        "include_patterns": [
          "ffmpeg*",
          "ffprobe*",
          "ffplay*"
        ]
      },
      "validation": {
        "required_files": ["ffmpeg"],
        "executable_check": true
      }
    },
    "selenium_drivers": {
      "enabled": false,
      "description": "Selenium WebDriver collection (ChromeDriver, GeckoDriver, etc.)",
      "handler_class": "SeleniumDriverHandler",
      "source_paths": {
        "windows": [
          "~/Downloads/selenium-drivers",
          "~/AppData/Local/selenium-drivers",
          "C:/selenium-drivers"
        ],
        "macos": [
          "~/Downloads/selenium-drivers",
          "~/bin/selenium-drivers",
          "/usr/local/bin"
        ],
        "linux": [
          "~/Downloads/selenium-drivers",
          "~/bin/selenium-drivers",
          "/usr/local/bin"
        ]
      },
      "destination": "third_party/selenium-drivers",
      "copy_strategy": "binary_only",
      "symlink_handling": {
        "macos": "resolve_symlinks",
        "windows": "resolve_symlinks",
        "linux": "resolve_symlinks"
      },
      "filters": {
        "include_patterns": [
          "chromedriver*",
          "geckodriver*",
          "msedgedriver*",
          "operadriver*"
        ],
        "exclude_patterns": [
          "*.zip",
          "*.tar.gz",
          "LICENSE*",
          "README*"
        ]
      },
      "validation": {
        "executable_check": true,
        "min_size_mb": 5
      }
    },
    "git_portable": {
      "enabled": false,
      "description": "Portable Git for version control",
      "handler_class": "GitPortableHandler",
      "source_paths": {
        "windows": [
          "C:/Program Files/Git",
          "C:/Program Files (x86)/Git",
          "~/AppData/Local/Programs/Git"
        ],
        "macos": [
          "/usr/local/git",
          "/opt/homebrew/bin",
          "/Applications/Xcode.app/Contents/Developer/usr/bin"
        ],
        "linux": [
          "/usr/bin",
          "/usr/local/bin"
        ]
      },
      "destination": "third_party/git",
      "copy_strategy": "selective",
      "symlink_handling": {
        "macos": "resolve_symlinks",
        "windows": "resolve_symlinks",
        "linux": "resolve_symlinks"
      },
      "filters": {
        "include_patterns": [
          "git*",
          "*.exe"
        ],
        "exclude_patterns": [
          "*/doc/*",
          "*/share/doc/*",
          "*/man/*"
        ]
      },
      "validation": {
        "required_files": ["git"],
        "executable_check": true
      }
    }
  },
  "global_settings": {
    "max_parallel_copies": 3,
    "copy_timeout_seconds": 300,
    "retry_attempts": 2,
    "verbose_logging": false,
    "backup_existing": true,
    "verify_after_copy": true
  },
  "copy_strategies": {
    "platform_specific": {
      "description": "Copy only files matching current platform",
      "implementation": "filter_by_platform"
    },
    "selective": {
      "description": "Copy based on include/exclude patterns",
      "implementation": "filter_by_patterns"
    },
    "binary_only": {
      "description": "Copy only executable binaries",
      "implementation": "filter_executables"
    },
    "full_copy": {
      "description": "Copy everything with basic filtering",
      "implementation": "copy_all"
    }
  },
  "symlink_strategies": {
    "safe_copy": {
      "description": "Use symlink manager for safe copying",
      "resolve_symlinks": false,
      "handle_conflicts": true
    },
    "resolve_symlinks": {
      "description": "Resolve all symlinks to actual files",
      "resolve_symlinks": true,
      "handle_conflicts": false
    },
    "preserve_symlinks": {
      "description": "Preserve symlinks as-is",
      "resolve_symlinks": false,
      "handle_conflicts": false
    }
  }
}
